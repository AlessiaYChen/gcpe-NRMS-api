node('master') {

    stage('Build Image') {
        echo "Building..."
        openshiftBuild bldCfg: 'nrms-api-develop', showBuildLogs: 'true'
        openshiftTag destStream: 'nrms-api', verbose: 'true', destTag: '$BUILD_ID', srcStream: 'nrms-api', srcTag: 'latest'
    }
	
    stage('Deploy on Dev') {
        echo "Deploying to dev..."
        openshiftTag destStream: 'nrms-api', verbose: 'true', destTag: 'dev', srcStream: 'nrms-api', srcTag: '$BUILD_ID'
	    //Sleeping for a while to wait deployment completes
    }
	
	stage('Deploy on Test') {
        input "Deploy to test?"
	    openshiftTag destStream: 'news-webapp', verbose: 'true', destTag: 'test', srcStream: 'news-webapp', srcTag: '$BUILD_ID'
	}
}